<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:padding="16dp">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:layout_above="@id/nums" />

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <!-- First column of buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/on"
                style="@style/Button1"
                android:text="ON"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num7"
                style="@style/Button2"
                android:text="7"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num4"
                style="@style/Button2"
                android:text="4"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num1"
                style="@style/Button2"
                android:text="1"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/del"
                style="@style/Button1"
                android:text="DEL"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Second column of buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/clear"
                style="@style/Button1"
                android:text="AC"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num8"
                style="@style/Button2"
                android:text="8"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num5"
                style="@style/Button2"
                android:text="5"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num2"
                style="@style/Button2"
                android:text="2"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num0"
                style="@style/Button2"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Third column of buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/off"
                style="@style/Button1"
                android:text="OFF"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num9"
                style="@style/Button2"
                android:text="9"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num6"
                style="@style/Button2"
                android:text="6"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num3"
                style="@style/Button2"
                android:text="3"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/decimal"
                style="@style/Button2"
                android:text="."
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Fourth column of buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/divide"
                style="@style/Button1"
                android:text="รท"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/multiply"
                style="@style/Button1"
                android:text="ร"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/subtract"
                style="@style/Button1"
                android:text="-"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/add"
                android:text="+"
                style="@style/Button1" />

            <Button
                android:id="@+id/equals"
                style="@style/Button1"
                android:text="="
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
